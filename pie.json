{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A pie chart showing the distribution of active participants by disability group, filtered by the selected state.",
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/Pie%20chart%20data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.State == (State == 'New South Wales' ? 'NSW' : State == 'Victoria' ? 'VIC' : State == 'Queensland' ? 'QLD' : State == 'South Australia' ? 'SA' : State == 'Western Australia' ? 'WA' : State == 'Tasmania' ? 'TAS' : State == 'Northern Territory' ? 'NT' : State == 'Australian Capital Territory' ? 'ACT' : 'Australia')"
    },
    {
      "aggregate": [
        {"op": "sum", "field": "Active Participants", "as": "total"},
        {"op": "count", "field": "Disability", "as": "count"}
      ],
      "groupby": ["Disability"]
    },
    {
      "calculate": "datum['Active Participants'] / datum['total'] * 100",
      "as": "percentage"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "total",
      "type": "quantitative",
      "title": "Active Participants"
    },
    "color": {
      "field": "Disability",
      "type": "nominal",
      "title": "Disability Group",
      "scale": {"scheme": "tableau10"}
    },
    "tooltip": [
      {"field": "Disability", "type": "nominal", "title": "Disability Group"},
      {"field": "total", "type": "quantitative", "title": "Active Participants"},
      {"field": "percentage", "type": "quantitative", "title": "Percentage"}
    ]
  }
}
