{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A pie chart of Active Participants with a state selector.",
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/By%20age%20group.csv",
    "format": {"type": "csv"}
  },
  "config": {
    "font": "Georgia",
    "title": {
      "fontSize": 20,
      "fontWeight": "bold",
      "font": "Optima",
      "color": "black",
      "anchor": "start",
      "offset": 10
    },
    "axis": {
      "labelFontSize": 14,
      "titleFontSize": 16,
      "labelColor": "black",
      "titleColor": "black",
      "titleFont": "Optima"
    }
  },
  "background": "#e0e0e5",
  "width": 500,
  "height": 300,
  "title": {
    "text": "Active Participants by Age Group",
    "anchor": "middle",
    "color": "black"
  },
  "params": [
    {
      "name": "State",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "New South Wales", 
          "Victoria", 
          "Queensland", 
          "South Australia", 
          "Western Australia", 
          "Tasmania", 
          "Northern Territory", 
          "Australian Capital Territory"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.State == (State == 'New South Wales' ? 'NSW' : State == 'Victoria' ? 'VIC' : State == 'Queensland' ? 'QLD' : State == 'South Australia' ? 'SA' : State == 'Western Australia' ? 'WA' : State == 'Tasmania' ? 'TAS' : State == 'Northern Territory' ? 'NT' : State == 'Australian Capital Territory' ? 'ACT' : 'Australia')"
    },
    {
      "aggregate": [
        {
          "op": "average",
          "field": "Active Participants",
          "as": "total"
        }
      ],
      "groupby": ["Age group"]
    },
    {
      "window": [{"op": "sum", "field": "total", "as": "TotalParticipants"}]
    },
    {
      "calculate": "datum.total / datum.TotalParticipants * 100",
      "as": "percent"
    }
  ],
  "encoding": {
    "theta": {"field": "total", "type": "quantitative", "stack": true},
    "color": {"field": "Age group", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "Age group", "type": "nominal", "title": "Age Group"},
      {"field": "total", "type": "quantitative", "title": "Active Participants"},
      {"field": "percent", "type": "quantitative", "title": "% of Total", "format": ".1f"},
      {"field": "State", "type": "nominal", "title": "State"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "arc", "outerRadius": 140}
    },
    {
      "mark": {"type": "text", "radius": 160},
      "encoding": {
        "text": {"field": "Age group", "type": "nominal"}
      }
    }
  ]
}
