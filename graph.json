{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/Funding.csv"},
  "config": {
    "font": "Georgia",
    "title": {"fontSize": 20, "fontWeight": "bold", "font": "Optima", "color": "black", "anchor": "start", "offset": 10},
    "axis": {"labelFontSize": 14, "titleFontSize": 16, "labelColor": "black", "titleColor": "black", "titleFont": "Optima"}
  },
  "title": {"text": "Average funding per participant per year", "anchor": "middle", "color": "black"},
  
  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 3},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "axis": {"title": "Year"}},
        "y": {"field": "Average budget", "type": "quantitative", "axis": {"title": "Average funding per participant"}},
        "color": {"field": "State", "type": "nominal", "scale": {"scheme": "dark2"}}
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Average budget", "type": "quantitative"},
        "color": {"field": "State", "type": "nominal", "scale": {"scheme": "dark2"}}
      }
    },
    {
      "mark": {"type": "circle", "stroke": "black", "strokeWidth": 2, "fill": "white"},
      "encoding": {
        "x": {"aggregate": "max", "field": "Year", "type": "ordinal"},
        "y": {"aggregate": {"argmax": "Year"}, "field": "Average budget", "type": "quantitative"},
        "color": {"field": "State", "type": "nominal", "scale": {"scheme": "dark2"}}
      },
      "layer": [
        {
          "mark": {"type": "circle"}
        },
        {
          "mark": {"type": "text", "align": "left", "dx": 10},
          "encoding": {
            "text": {"field": "State", "type": "nominal"}
          }
        }
      ]
    }
  ],
  "width": 600,
  "height": 300
}
