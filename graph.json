{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/Funding.csv"
  },
  "config": {
    "font": "Georgia",
    "title": {
      "fontSize": 20,
      "fontWeight": "bold",
      "font": "Optima",
      "color": "black",
      "anchor": "start",
      "offset": 10
    },
    "axis": {
      "labelFontSize": 14,
      "titleFontSize": 16,
      "labelColor": "black",
      "titleColor": "black",
      "titleFont": "Optima"
    }
  },
  "background": "#e0e0e5",
  "width": 600,
  "height": 350,
  "title": {
    "text": "Average Funding per Participant per Year",
    "anchor": "middle",
    "color": "black"
  },
  "layer": [
    {
      "selection": {
        "state_highlight": {
          "type": "multi",
          "fields": ["State"],
          "bind": "legend" 
        }
      },
      "mark": {
        "type": "line",
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "title": "Year"
          }
        },
        "y": {
          "field": "Average budget",
          "type": "quantitative",
          "axis": {
            "title": "Average Funding per Participant"
          }
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "scheme": "dark2"
          },
          "legend": {
            "orient": "bottom"  
          }
        },
        "opacity": {
          "condition": {
            "selection": "state_highlight",
            "value": 1  
          },
          "value": 0.2  
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Average budget",
          "type": "quantitative"
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "scheme": "dark2"
          },
          "legend": {
            "orient": "bottom"  
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal"
          },
          {
            "field": "Year",
            "type": "ordinal"
          },
          {
            "field": "Average budget",
            "type": "quantitative"
          },
          {
            "field": "Active participants",
            "type": "quantitative"
          },
          {
            "field": "Total funding",
            "type": "nominal",
            "format": "$,.2f"
          }
        ]
      }
    }
  ]
}
