{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Choropleth Map of Active Participants (2019)",
    "anchor": "middle",
    "fontSize": 20,
    "fontWeight": "bold",
    "font": "Optima",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
    "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
  },
  "config": {
    "font": "Georgia",
    "title": {
      "fontSize": 20,
      "fontWeight": "bold",
      "font": "Optima",
      "color": "black"
    }
  },
  "transform": [
    {
      "lookup": "properties.SA4_CODE21",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4_participants_count.csv",
          "format": {"type": "csv"}
        },
        "key": "Key",
        "fields": ["Normalised Active Participants (Participants/10000 residents)", "Year"]
      }
    },
    {
      "calculate": "toNumber(datum.Year)",
      "as": "Year_num"
    },
    {
      "filter": "datum.Year_num === 2019"
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Normalised Active Participants (Participants/10000 residents)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [50, 100, 200, 300, 400],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#7f2704"]
          },
          "condition": {
            "test": "datum['Normalised Active Participants (Participants/10000 residents)'] === null || datum['Normalised Active Participants (Participants/10000 residents)'] === 0",
            "value": "lightgray"
          }
        },
        "tooltip": [
          {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region Name"},
          {"field": "Normalised Active Participants (Participants/10000 residents)", "type": "quantitative", "title": "Participants per 10,000 Residents"},
          {"field": "Year_num", "type": "ordinal", "title": "Year"},
          {"field": "properties.SA4_CODE21", "type": "nominal", "title": "SA4 Code"}
        ]
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {"value": "transparent"}
      }
    }
  ],
  "width": 600,
  "height": 300
}
