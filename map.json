{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Choropleth Map of Active Participants by Region",
    "color": "black",
    "font": "Optima",
    "fontSize": 20,
    "fontWeight": "bold",
    "offset": 10
  },
  "background": "#e0e0e5", 
  "width": 600,
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2024,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "projection": {"type": "mercator"},
  "config": {
    "font": "Georgia",
    "legend": {
      "orient": "bottom-right",
      "labelFontSize": 10,
      "titleFontSize": 10
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
        "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "tooltip": {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region Name"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4_participants_count.csv"
      },
      "transform": [
        {
          "lookup": "Key",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
              "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
            },
            "key": "properties.SA4_CODE21"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Normalised Active Participants (Participants/10000 residents)",
          "type": "quantitative",
          "scale": {"domain": [0, 450], "scheme": "lighttealblue"},
          "legend": {"title": "Participants/10,000 Residents", "orient": "bottom"}
        },
        "tooltip": [
          {"field": "Region name", "type": "nominal", "title": "Region"},
          {"field": "Normalised Active Participants (Participants/10000 residents)", "type": "quantitative", "title": "Participants/10,000 residents"},
          {"field": "Year", "type": "quantitative"},
          {"field": "Population", "type": "quantitative"}, 
          {"field": "Active participants", "type": "quantitative"}
        ]
      }
    }
  ]
}
