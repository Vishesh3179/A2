{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Choropleth Map of Active Participants by Region",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": "2019",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021", "2022", "2023", "2024"], 
        "labels": ["2019", "2020", "2021", "2022", "2023", "2024"],
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
        "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "properties.SA4_NAME21",
          "type": "nominal",
          "title": "Region Name"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4_participants_count.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year_selection" // Filter for selected year
        },
        {
          "lookup": "Key",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
              "format": {
                "type": "topojson",
                "feature": "SA4_2021_AUST_GDA2020"
              }
            },
            "key": "properties.SA4_CODE21"
          },
          "as": "geo" // Adds geographical data to the main dataset
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Normalised Active Participants (Participants/10000 residents)",
          "type": "quantitative",
          "scale": {
            "domain": [0, 400], // Adjust based on your data range
            "scheme": "reds"
          },
          "legend": { "format": ".2s" }
        },
        "tooltip": [
          { "field": "Region name", "type": "nominal", "title": "Region" },
          {
            "field": "Normalised Active Participants (Participants/10000 residents)",
            "type": "quantitative",
            "title": "Participants per 10,000 Residents",
            "format": ".2f"
          },
          { "field": "Year", "type": "quantitative", "title": "Year" }
        ]
      }
    }
  ],
  "config": {}
}
