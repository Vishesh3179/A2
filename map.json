{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Active participants per 10,000 residents by region over time",
    "color": "black",
    "font": "Optima",
    "fontSize": 20,
    "fontWeight": "bold",
    "offset": -20
  },
  "background": "#e0e0e5",
  "width": 600,
  "height": 600,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2024,
        "step": 1,
        "name": "Year:"
      }
    },
    {
      "name": "center_to",
      "value": [133.7751, -25.2744],  
      "bind": {
        "input": "select",
        "options": [
          [133.7751, -25.2744],   
          [151.2093, -33.8688],   
          [144.9631, -37.8136],   
          [153.0251, -27.4698],   
          [115.8575, -31.9505],   
          [138.6007, -34.9285],   
          [147.3272, -42.8821],   
          [130.8456, -12.4634],   
          [149.1310, -35.2809]    
        ],
        "labels": [
          "Australia",           
          "New South Wales",
          "Victoria",
          "Queensland",
          "Western Australia",
          "South Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "State:"
      }
    },
    {
      "name": "zoom_level",
      "value": 760,
      "bind": {
        "input": "range",
        "min": 760,
        "max": 1500,
        "step": 100,
        "name": "Zoom:"
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": {"expr": "zoom_level"},
    "center": {"expr": "center_to"}
  },
  "config": {
    "font": "Georgia",
    "legend": {
      "orient": "right",
      "labelFontSize": 10,
      "titleFontSize": 10
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
        "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "tooltip": {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region Name"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4_participants_count.csv"
      },
      "transform": [
        {
          "lookup": "Key",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/SA4.json",
              "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
            },
            "key": "properties.SA4_CODE21"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Normalised Active Participants (Participants/10000 residents)",
          "type": "quantitative",
          "scale": {"domain": [0, 450], "scheme": "lighttealblue"},
          "legend": {"title": "Participants/10,000 Residents", "orient": "bottom"}
        },
        "tooltip": [
          {"field": "Region name", "type": "nominal", "title": "Region"},
          {"field": "Normalised Active Participants (Participants/10000 residents)", "type": "quantitative", "title": "Participants/10,000 residents"},
          {"field": "Year", "type": "quantitative"},
          {"field": "Population", "type": "nominal"},
          {"field": "Active participants", "type": "quantitative"}
        ]
      }
    }
  ]
}
