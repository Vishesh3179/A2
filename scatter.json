{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatter plot of Active Participants vs Participant/Provider ratio, color-coded by Disability group with a selector for filtering by Australia or individual states.",
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/Providers%20by%20disability.csv",
    "format": {"type": "csv"}
  },
  "config": {
    "font": "Georgia",
    "title": {
      "fontSize": 20,
      "fontWeight": "bold",
      "font": "Optima",
      "color": "black",
      "anchor": "start",
      "offset": 10
    },
    "axis": {
      "labelFontSize": 14,
      "titleFontSize": 16,
      "labelColor": "black",
      "titleColor": "black",
      "titleFont": "Optima"
    }
  },
  "background": "#e0e0e5",
  "width": 500,
  "height": 300,
  "title": {
    "text": "Active Participants vs Participant/Provider Ratio",
    "anchor": "middle",
    "color": "black"
  },
  "params": [
    {
      "name": "stateSelection",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "New South Wales", 
          "Victoria", 
          "Queensland", 
          "South Australia", 
          "Western Australia", 
          "Tasmania", 
          "Northern Territory", 
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {
      "filter": "stateSelection == 'Australia' ? datum.State == 'Australia' : datum.State == (stateSelection == 'New South Wales' ? 'NSW' : stateSelection == 'Victoria' ? 'VIC' : stateSelection == 'Queensland' ? 'QLD' : stateSelection == 'South Australia' ? 'SA' : stateSelection == 'Western Australia' ? 'WA' : stateSelection == 'Tasmania' ? 'TAS' : stateSelection == 'Northern Territory' ? 'NT' : stateSelection == 'Australian Capital Territory' ? 'ACT' : 'Australia')"
    },
    {
      "calculate": "toNumber(datum['Active Participants'])",
      "as": "ActiveParticipants"
    },
    {
      "calculate": "toNumber(datum['Participant/Provider ratio'])",
      "as": "ParticipantProviderRatio"
    }
  ],
  "mark": {
    "type": "circle",
    "size": 200
  },
  "encoding": {
    "x": {
      "field": "ActiveParticipants",
      "type": "quantitative",
      "title": "Active Participants"
    },
    "y": {
      "field": "ParticipantProviderRatio",
      "type": "quantitative",
      "title": "Participant/Provider Ratio"
    },
    "size": {
      "field": "Active providers",
      "type": "quantitative",
      "title": "Active Providers",
      "scale": {"range": [0, 1500]}  // Bubble size represents Active Providers
    },
    "color": {
      "field": "Disability group",
      "type": "nominal",
      "title": "Disability Group",
      "legend": {"titleFont": "Optima", "labelFont": "Georgia"},
      "scale": {
        "scheme": "dark2"
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Disability group", "type": "nominal", "title": "Disability Group"},
      {"field": "ActiveParticipants", "type": "quantitative", "title": "Active Participants"},
      {"field": "ParticipantProviderRatio", "type": "quantitative", "title": "Participant/Provider Ratio"}
    ]
  }
}
