{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar chart showing the top 5 disabilities by active participants for each selected country.",
  "data": {
    "url": "https://raw.githubusercontent.com/Vishesh3179/A2/refs/heads/main/By%20disability%20group.csv",
    "format": {"type": "csv"}
  },
  "config": {
    "font": "Georgia",
    "title": {
      "fontSize": 20,
      "fontWeight": "bold",
      "font": "Optima",
      "color": "black",
      "anchor": "start",
      "offset": 10
    }
  },
  "background": "#e0e0e5",
  "width": 500,
  "height": 300,
  "title": {
    "text": "Top 5 Disabilities by Active Participants",
    "anchor": "middle",
    "color": "black"
  },
  "params": [
    {
      "name": "State",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "New South Wales", 
          "Victoria", 
          "Queensland", 
          "South Australia", 
          "Western Australia", 
          "Tasmania", 
          "Northern Territory", 
          "Australian Capital Territory"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.State == (State == 'New South Wales' ? 'NSW' : State == 'Victoria' ? 'VIC' : State == 'Queensland' ? 'QLD' : State == 'South Australia' ? 'SA' : State == 'Western Australia' ? 'WA' : State == 'Tasmania' ? 'TAS' : State == 'Northern Territory' ? 'NT' : State == 'Australian Capital Territory' ? 'ACT' : 'Australia')"
    },
    {
      "calculate": "toNumber(datum['Active Participants'])",
      "as": "ActiveParticipants"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{"field": "ActiveParticipants", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 5"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "ActiveParticipants",
      "type": "quantitative",
      "title": "Active Participants"
    },
    "y": {
      "field": "Disability",
      "type": "nominal",
      "sort": {"field": "ActiveParticipants", "op": "sum", "order": "descending"},
      "title": "Disability Group"
    },
    "tooltip": [
      {"field": "Disability", "type": "nominal", "title": "Disability Group"},
      {"field": "ActiveParticipants", "type": "quantitative", "title": "Active Participants"},
      {"field": "rank", "type": "ordinal", "title": "Rank"},
      {"field": "State", "type": "nominal", "title": "State"}
    ]
  }
}
